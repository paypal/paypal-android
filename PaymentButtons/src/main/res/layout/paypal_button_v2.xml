<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:minHeight="48dp"
    tools:parentTag="android.widget.RelativeLayout">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/button_content"
        android:layout_alignBottom="@id/button_content"
        android:background="@drawable/paypal_button_v2_background"
        android:text="Pay with PayPal"
        android:textColor="#00000000" />

    <LinearLayout
        android:id="@+id/button_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:orientation="horizontal"
        android:translationZ="2dp">

        <TextView
            android:id="@+id/prefixText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/paypal_payment_button_text_margin"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/paypalopen_regular"
            android:importantForAccessibility="no"
            android:text="Pay with"
            tools:textColor="@color/paypal_spb_on_light_surface" />

        <ImageView
            android:id="@+id/payPalWordmarkImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:importantForAccessibility="no"
            android:src="@drawable/wordmark_paypal_v2" />

        <TextView
            android:id="@+id/suffixText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paypal_payment_button_text_margin"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/paypalopen_regular"
            android:importantForAccessibility="no"
            tools:text="Checkout"
            tools:textColor="@color/paypal_spb_on_light_surface" />

    </LinearLayout>

</merge>
